<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.menu.meadow.MeadowFragment">

        <ImageView
            android:id="@+id/addRowTop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/prairie_dark"
            app:layout_constraintEnd_toEndOf="@+id/gridMeadows"
            app:layout_constraintStart_toStartOf="@+id/gridMeadows"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_add" />

        <ImageView
            android:id="@+id/addRowBottom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@color/prairie_dark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/gridMeadows"
            app:layout_constraintStart_toStartOf="@+id/gridMeadows"
            app:srcCompat="@drawable/ic_add" />

        <ImageView
            android:id="@+id/addColumnRight"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/prairie_dark"
            app:layout_constraintBottom_toTopOf="@+id/addRowBottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addRowTop"
            app:srcCompat="@drawable/ic_add" />

        <ImageView
            android:id="@+id/addColumnLeft"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/prairie_dark"
            app:layout_constraintBottom_toTopOf="@+id/addRowBottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addRowTop"
            app:srcCompat="@drawable/ic_add" />

        <TableLayout
            android:id="@+id/gridMeadows"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/addRowBottom"
            app:layout_constraintEnd_toStartOf="@+id/addColumnRight"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/addColumnLeft"
            app:layout_constraintTop_toBottomOf="@+id/addRowTop">

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prueba"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prueba"
                    android:textSize="20dp"/>

            </TableRow>

        </TableLayout>

    </android.support.constraint.ConstraintLayout>
</layout>
